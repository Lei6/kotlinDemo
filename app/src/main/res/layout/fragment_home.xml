<?xml version="1.0" encoding="utf-8"?>
<com.dame.kotlindemo.view.MultipleStatusView xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <com.youth.banner.Banner android:layout_width="match_parent"
                             android:layout_height="200dp"
                             android:id="@+id/banner"/>

    <androidx.recyclerview.widget.RecyclerView android:layout_width="match_parent"
                                               android:layout_height="0dp"
                                               android:layout_weight="1"
                                               android:layout_below="@+id/banner"
                                               android:id="@+id/home_recycle"/>

</com.dame.kotlindemo.view.MultipleStatusView>